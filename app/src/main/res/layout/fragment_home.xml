<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!--Header Profile-->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/profile_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Profile Image"
                android:src="@drawable/ic_account_circle_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Welcome Back"
                android:textColor="@color/md_theme_outline"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/profile_image"
                app:layout_constraintTop_toTopOf="@id/profile_image" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Anas Sh."
                android:textColor="@color/md_theme_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/profile_image"
                app:layout_constraintTop_toBottomOf="@+id/welcome_text" />


            <ImageButton
                android:id="@+id/notification_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/md_theme_background"
                android:contentDescription="Notification"
                android:src="@drawable/ic_notifications_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/total_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_image">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_theme_onPrimaryContainer"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/total_value_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Keuangan"
                        android:textColor="@color/md_theme_secondaryContainer"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/total_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp1.000.000"
                        android:textColor="@color/md_theme_onSecondary"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/total_value_label" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/total_value" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/divider">

                        <TextView
                            android:id="@+id/income_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Pemasukan"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@id/value"
                            app:layout_constraintWidth_percent="0.5" />

                        <TextView
                            android:id="@+id/income_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/md_theme_inversePrimary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/income_label" />

                        <TextView
                            android:id="@+id/outcome_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Pengeluaran"
                            android:textColor="@color/md_theme_error"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintWidth_percent="0.5" />

                        <TextView
                            android:id="@+id/outcome_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/md_theme_inversePrimary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/outcome_label"
                            app:layout_constraintTop_toBottomOf="@id/outcome_label" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Wallet title Section-->
            <LinearLayout
                android:id="@+id/wallet_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/total_card">

                <!-- Section Title -->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="My Wallet"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/see_all_wallets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="end"
                    android:padding="8dp"
                    android:text="Lihat Semua"
                    android:textColor="@color/md_theme_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/wallet_recyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/wallet_layout"
                    app:layout_constraintTop_toBottomOf="@+id/wallet_section"/>

            <!-- Transaction History Section -->
            <LinearLayout
                android:id="@+id/trx_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/wallet_recyclerView">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Riwayat Transaksi"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/see_all_transactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="end"
                    android:padding="8dp"
                    android:text="Lihat Semua"
                    android:textColor="@color/md_theme_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <!--            List Transaksi    -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/transaction_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/trx_title"
                tools:listitem="@layout/transaction_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

