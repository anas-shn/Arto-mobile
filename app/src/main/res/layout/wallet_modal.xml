<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Wallet Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/iv_popup_wallet_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/bca_logo"
                android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_popup_wallet_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BCA"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_primary" />

                <TextView
                    android:id="@+id/tv_popup_wallet_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bank"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_outline" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo"
                    android:textSize="12sp"
                    android:textColor="@color/md_theme_outline" />

                <TextView
                    android:id="@+id/tv_popup_wallet_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 5.000.000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_primary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. Rekening"
                    android:textSize="12sp"
                    android:textColor="@color/md_theme_outline" />

                <TextView
                    android:id="@+id/tv_popup_wallet_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234567890"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_onSurface" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_wallet"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Hapus"
            android:textColor="@color/md_theme_error"
            app:icon="@drawable/ic_delete_24"
            app:iconTint="@color/md_theme_error" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_wallet"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            app:icon="@drawable/ic_edit_24" />

    </LinearLayout>

</LinearLayout>